---
import { Picture } from "@astrojs/image/components";

import mascot from "~/assets/mascot.jpg";

import Starfield from "~/components/starfield.astro";
import sigLogo from "~/assets/logo-main.webp";
const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2
      class="flex flex-col gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
      <div class="flex items-center justify-center">
        <img src={sigLogo.src} alt="Logo" class="h-24 md:h-32" />
      </div>
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-8xl"
      >
        Purdue SIGAI
      </div>
    </h2>
    <div
      id="sig-logo"
      class="w-2/3 p-8 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Picture
        class="object-cover w-full h-full rounded-full"
        src={mascot}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="SIG AI Mascot"
      />
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #sig-logo {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #sig-logo {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
